<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/layoutRoot"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical">

	<include layout="@layout/navi_top_bar"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tvSymbol"
					style="@style/DefaultTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="$"
					android:textSize="30sp"/>

				<TextView
					android:id="@+id/tvPrice"
					style="@style/DefaultTextView"
					android:layout_width="wrap_content"
					android:gravity="center"
					android:text="100"
					android:textSize="40sp"/>

				<TextView
					android:id="@+id/tvEndPrice"
					style="@style/DefaultTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=".01"
					android:textSize="30sp"/>
			</LinearLayout>

			<TextView
				android:id="@+id/tvBitcoin"
				style="@style/DefaultTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="100"
				android:textSize="20sp"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tvExchange"
					style="@style/DefaultTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="+$1.00 (+1.00%)"
					android:textColor="@color/green"/>

				<TextView
					android:id="@+id/tvForTime"
					style="@style/DefaultTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="7dp"
					android:fontFamily="@font/helvetica_neue_medium"
					android:text="for 24 hours"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:gravity="center"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tvLow"
					style="@style/DefaultTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/helvetica_neue_medium"
					android:text="Low: "/>

				<TextView
					android:id="@+id/tvLowValue"
					style="@style/DefaultTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="$6,216"
					android:textColor="@color/red"/>

				<ImageView
					android:id="@+id/imgDot"
					android:layout_width="4dp"
					android:layout_height="4dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:src="@drawable/circle"/>

				<TextView
					android:id="@+id/tvHigh"
					style="@style/DefaultTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/helvetica_neue_medium"
					android:text="High: "/>

				<TextView
					android:id="@+id/tvHighValue"
					style="@style/DefaultTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="$6,898"
					android:textColor="@color/green"/>
			</LinearLayout>

			<com.app.vietincome.view.NoneSwipeViewpager
				android:id="@+id/viewPagerChart"
				android:layout_width="match_parent"
				android:layout_height="@dimen/line_chart_height"
				android:layout_marginTop="10dp"
				/>

			<android.support.design.widget.TabLayout
				android:id="@+id/tabLayoutTime"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				app:tabGravity="fill"
				app:tabIndicatorHeight="2dp"
				app:tabMode="fixed"/>

		</LinearLayout>
	</ScrollView>

</LinearLayout>